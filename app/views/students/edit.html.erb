<h1>Edit Student</h1>

<%= form_with model: @student do |form| %>
	<% if @student.errors.any? %>
		<% @student.errors.full_messages.each do |message| %>
			<p><%= message %></p>
		<% end %>	
	<% end %>
	<div>
		<%= form.label :first_name %><br>
		<%= form.text_field :first_name %>
	</div>
	<div>
		<%= form.label :last_name %><br>
		<%= form.text_field :last_name %>
	</div>
	<div>
		<%= form.label :phone %><br>
		<%= form.text_field :phone %>
	</div>
	<div>
		<%= form.label :email %><br>
		<%= form.email_field :email %>
	</div>
	<div>
    	<%= form.radio_button :country, 'USA' %> USA<br />
    	<%= form.radio_button :country, 'Canada' %> Canada<br />
    	<%= form.radio_button :country, 'Mexico' %> Mexico<br />
	</div>
	<div>
  		<%= form.label :image %>
 		<%= form.file_field :image %>
  	</div>
	<div>
		<%= form.label :value %><br>
		<%= form.check_box :value %>
	</div>
	<div>
		<br><%= form.submit %>
	</div>
<% end %>