<h1>Products Are</h1>
<div>
		<table>
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Quantity</th>
					<th>Price</th>
					<th colspan="3"></th>
				</tr>
			</thead>
		<% @products.each do |product| %>
			<tbody>
				<tr>
					<td><%= product.id %></td>
					<td><%= product.name %></td>
					<td><%= product.quantity %></td>
					<td><%= product.price %></td>
					<td><%= link_to 'Show', product_path(product) %></td>
				</tr>
			</tbody>
		<% end %>
		</table>
</div>